snippet jd "jest / describe"
	describe('${1}', () => {${0}});

snippet jdt "jest / describe keyof Testee"
	describe('${1}' satisfies keyof Testee, () => {${0}});

snippet jdp "jest / describe Testee.prototype...name"
	describe(Testee.prototype.${1}.name, () => {${0}});

snippet jt "jest / it"
	it('${1}', () => {${0}});

snippet ajt "jest / it (async)"
	it('${1}', async () => {${0}});

