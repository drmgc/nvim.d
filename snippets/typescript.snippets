##
## JavaScript
##

snippet if "if"
	if (${1}) {${0}}

snippet el "else"
	else {${0}}

snippet for
	for (${1}) {${0}}

snippet fof "for of"
	for (const ${1} of ${2}) {${0}}

snippet while
	while (${1}) {${0}}

snippet e "export"
	export $0

# functions

snippet fun "function"
	function (${1}) {
		${0:${VISUAL}}
	}

snippet afun "async function"
	async function (${1}) {
		${0:${VISUAL}}
	}

snippet l "lambda"
	(${1}) => {${0}}

snippet al "async lambda"
	async (${1}) => {${0}}

snippet mt "method"
	$1($2) {$0}

snippet amt "async method"
	async $1($2) {$0}

